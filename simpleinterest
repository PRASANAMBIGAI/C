#include <stdio.h>
int main() 
{
    int p,r,t;
    float si;
    printf("ENTER THE PRINCIPLE: ");
    scanf("%d",&p);
    printf("ENTER THE RATE: ");
    scanf("%d",&r);
    printf("ENTER THE TIME: ");
    scanf("%d",&t);
    si=(float)p*r*t/(float)100;
    printf("THE SIMPLE INTREST: %f",si);
    return 0;
}
